{
  "name": "node-static-cms-workspace",
  "version": "1.0.0",
  "description": "node-static-cms workspace",
  "private": true,
  "workspaces": [
    "packages/lib",
    "packages/test"
  ],
  "scripts": {
    "dev": "nodemon packages/lib/src/index.js --siteRoot=example-site --outputRoot=dist",
    "dev:generate": "node packages/lib/src/index.js --port=3001 --siteRoot=example-site --outputRoot=dist --generate",
    "dev:distserver": "cd dist && http-server",
    "test": "cd packages/test && node test.js",
    "package": "cd packages/lib && npm pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/williamparry/node-static-cms.git"
  },
  "author": "William Parry",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/williamparry/node-static-cms/issues"
  },
  "homepage": "https://github.com/williamparry/node-static-cms#readme",
  "dependencies": {
    "http-server": "^14.1.1",
    "nodemon": "^2.0.21"
  }
}
